<?xml version="1.0" encoding="utf-8"?>
<resources>

    <string name="roboto_light">sans-serif-light</string>
    <string name="roboto_medium">sans-serif-medium</string>
    <string name="roboto_regular">sans-serif</string>
    <string name="roboto_condensed">sans-serif-condensed</string>
    <string name="roboto_black">sans-serif-black</string>
    <string name="roboto_thin">sans-serif-thin</string>

    <style name="text_title">
        <item name="android:textSize">@dimen/text_50</item>
        <item name="android:fontFamily">@font/coolvetica_rg</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_main_content">
        <item name="android:textSize">@dimen/text_30</item>
        <item name="android:fontFamily">@font/coolvetica_rg</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_content">
        <item name="android:textSize">@dimen/text_20</item>
        <item name="android:fontFamily">@font/coolvetica_rg</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button_outlined_rounded_corners" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_rounded_outlined</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/coolvetica_rg</item>
        <item name="android:textSize">@dimen/text_24</item>
    </style>

</resources>